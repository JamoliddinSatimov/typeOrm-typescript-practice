{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "moduleResolution": "Node",
        "rootDir": "./",
        "outDir": "./dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}